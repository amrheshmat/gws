@using TripBusiness.Ibusiness
@inject ILocalizationService _localizationService;
@{
    ViewData["Title"] = "Admin Page";
    Layout = "~/Views/Shared/_layout.cshtml";
    var abouts = ViewBag.abouts;
}
<!-- About Us Section -->
<section class="about-us section aboutusSection" id="about-us">
    <div class="container">
        <div class="section-content">
            <div class="text">
                <h3>Who We Are</h3>
                <p>We are a forward-thinking company committed to creating innovative solutions that make an impact. With years of experience in the industry, we are dedicated to serving our clients with the highest level of professionalism and expertise.</p>
                <a href="#contact" class="btn">Contact Us</a>
            </div>
            <div class="image">
                <img src="images/header-lap-carousel.webp" alt="About Us Image">
            </div>
        </div>
    </div>
</section>

<!-- Our Team Section -->
<section class="our-team section aboutusSection" id="our-team">
    <div class="container">
        <h2>Our Team</h2>
        <div class="team-members">
            <!-- Team Member 1 -->
            <div class="team-member">
                <img src="images/header-lap-carousel.webp" alt="Team Member">
                <h3>John Doe</h3>
                <p>CEO & Founder</p>
            </div>

            <!-- Team Member 2 -->
            <div class="team-member">
                <img src="images/header-lap-carousel.webp" alt="Team Member">
                <h3>Jane Smith</h3>
                <p>Chief Operating Officer</p>
            </div>

            <!-- Team Member 3 -->
            <div class="team-member">
                <img src="images/header-lap-carousel.webp" alt="Team Member">
                <h3>Mark Johnson</h3>
                <p>Lead Developer</p>
            </div>

            <!-- Team Member 4 -->
            <div class="team-member">
                <img src="images/header-lap-carousel.webp" alt="Team Member">
                <h3>Emily Davis</h3>
                <p>Marketing Director</p>
            </div>
        </div>
    </div>
</section>

<!-- Testimonials Section -->
<section class="testimonials section aboutusSection" id="testimonials">
    <div class="container">
        <h2>What Our Clients Say</h2>
        <div class="testimonial-cards">
            <!-- Testimonial 1 -->
            <div class="testimonial-card">
                <img src="images/header-lap-carousel.webp" alt="Client">
                <h4>Robert Brown</h4>
                <p>"The best company I've worked with. They exceeded our expectations and delivered results in record time!"</p>
            </div>

            <!-- Testimonial 2 -->
            <div class="testimonial-card">
                <img src="images/header-lap-carousel.webp" alt="Client">
                <h4>Susan Clark</h4>
                <p>"Their team was professional, knowledgeable, and truly cared about our success. Highly recommended!"</p>
            </div>

            <!-- Testimonial 3 -->
            <div class="testimonial-card">
                <img src="images/header-lap-carousel.webp" alt="Client">
                <h4>David Wilson</h4>
                <p>"Incredible service and great results. They really understand what businesses need to succeed."</p>
            </div>
        </div>
    </div>
</section>


<script type="text/javascript">
    $(document).ready(function () {
    });
    function viewcontact(id,name) {
        $(".modal-body #contactId").val(id);
        $(".modal-body #contactName").val(name);
        }
</script>