<!-- Start Blog Section -->
<section>
    <div class="blog-section section">
        <div class="container py-5">
            <h2 class="italic">What's New</h2>

            <div class="row g-4">
                @foreach (var blog in blogs)
                {
                    @if (Model.Where(e => e.elementId == blog.blogId).ToList().Count > 0)
                    {
                        var mainImage = Model.Where(e => e.elementId == blog.blogId && e.type == "blog").ToList();
                        
                        if(mainImage.Count > 0)
                        {
                            <div class="col-md-4">
                                <div class="card blog-card">
                                    <img src="Files/@mainImage[0].attachmentPath" class="card-img-top" alt="Blog Post 1" loading="lazy" />
                                    <div class="card-body">
                                        <h5 class="card-title">@blog.title</h5>
                                        <p class="card-text">@blog.description</p>
                                        <a href="/BlogSingle/@blog.blogId" class="stretched-link">Read More</a>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-md-3">
                                <div class="card blog-card">
                                    <img src="images/header-office-carousel.webp" class="card-img-top" alt="Blog Post 2" loading="lazy" />
                                    <div class="card-body">
                                        <h5 class="card-title">@blog.title</h5>
                                        <p class="card-text">@blog.description</p>
                                        <a href="/BlogSingle/@blog.blogId" class="stretched-link">Read More</a>
                                    </div>
                                </div>
                            </div>
                        }

                    }
                }
            </div>
        </div>
    </div>
</section>
<!-- End Blog Section -->
<!--Start contact form -->
<section>
    <div class="form-container section">
        <div class="form-background">
            <form class="form">
                <h2>Contact Us</h2>
                <label for="name">Full Name</label>
                <input type="text" id="name" name="name" placeholder="Enter your full name" required>

                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" placeholder="Enter your email" required>

                <label for="message">Message</label>
                <textarea id="message" name="message" rows="4" placeholder="Your message..." required></textarea>

                <button type="submit">Send Message</button>
            </form>
        </div>
    </div>
</section>
