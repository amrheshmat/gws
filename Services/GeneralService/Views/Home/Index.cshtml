@model List<MWS.Data.Entities.Attachment>;
@{
    var tours = ViewBag.tours;
    var blogs = ViewBag.blogs;
    var cities = ViewBag.cities;
    var categories = ViewBag.categories;
    var whyChooseUs = ViewBag.whyChooseUs;
    var toursAttachments = ViewBag.toursAttachments;
}
<!-- Start wrapper-->
<div id="wrapper">
    <!-- content -->
    <div class="content">
        <!--  section  -->
        <section class="hero-section hero-section_dec" data-scrollax-parent="true">
            <div class="bg-wrap">
                <div class="bg par-elem " data-bg="img/14.jpg" data-scrollax="properties: { translateY: '30%' }" style="background-image: url(&quot;./img/14.jpg&quot;); transform: translateZ(0px) translateY(25.8241%);"></div>
            </div>
            <div class="overlay"></div>
            <video autoplay muted loop playsinline>
                <source src="./images/4596386-hd_1920_1080_25fps.mp4" type="video/mp4" />
                Your browser does not support the video tag.
            </video>
            <div class="container">
                <div class="hero-title hero-title_small">
                    <h4>Photographer Platform</h4>
                    <h2>
                        Find The Photographer You Need  <br>
                        Using Our Platform
                    </h2>
                </div>
                <div class="main-search-input-wrap">
                    <div class="main-search-input fl-wrap">
                        <div class="main-search-input-item">
                            <input type="text" placeholder="What are you looking for?" value="">
                        </div>
                        <div class="main-search-input-item">
                            <select data-placeholder="All Categories" class="chosen-select no-search-select" style="display: none;">
                                @foreach (var category in categories)
                                {
                                    <option>@category.name</option>
                                }
                            </select>
                            <div class="nice-select chosen-select no-search-select" tabindex="0">
                                <span class="current">All Categories</span>
                                <i class="fa fa-caret-down"></i>
                                <div class="nice-select-search-box">
                                    <input type="text" class="nice-select-search" placeholder="Search...">
                                </div>
                                <ul class="list">
                                    @foreach (var category in categories)
                                    {
                                        <li data-value="@category.name" class="option">@category.name</li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <div class="main-search-input-item">
                            <select data-placeholder="All Categories" class="chosen-select" style="display: none;">
                                @foreach(var city in cities)
                                {
                                    <option>@city.name</option>
                                }
                            </select>
                            <div class="nice-select chosen-select no-search-select" tabindex="0">
                                <span class="current">All Cities</span>
                                <i class="fa fa-caret-down"></i>
                                <div class="nice-select-search-box">
                                    <input type="text" class="nice-select-search" placeholder="Search...">
                                </div>
                                <ul class="list">
                                    @foreach (var city in cities)
                                    {
                                        <li data-value="@city.name" class="option">@city.name</li>
                                    }
                                </ul>
                            </div>
                        </div>
                        <button class="main-search-button color-bg" onclick="window.location.href='listing.html'">  Search <i class="fa fa-search"></i> </button>
                    </div>
                </div>
                <div class="hero-notifer fl-wrap">Need more search options? <a href="listing.html">Advanced Search</a> </div>
                <div class="scroll-down-wrap">
                    <div class="mousey">
                        <div class="scroller"></div>
                    </div>
                    <span>Scroll Down To Discover</span>
                </div>
            </div>
        </section>
        <!--  section  end-->
    </div>
    <!-- content end -->
</div>
<!-- End wrapper -->
