<!-- Initialize Select2 AFTER all scripts have loaded -->
<script>
    function toggleDropdownIcon() {
        const $select = $('#multiSelect');
        const hasSelected = $select.val() && $select.val().length > 0;
        const container = $select.next('.select2-container').find('.select2-selection--multiple');

        if (hasSelected) {
            container.addClass('has-selection');
        } else {
            container.removeClass('has-selection');
        }
    }
    $(document).ready(function () {
        // This will now work if Select2 loaded correctly
        $('.multi-select').select2({
            placeholder: "Select Categories",
            allowClear: true,
            maximumSelectionLength: 5
        });
        toggleDropdownIcon();
        // Update on change
        $('#multiSelect').on('change', toggleDropdownIcon);
    });
</script>
