            <div class="row mt-5" style="margin:60px!important;">
                <div class="col">
                    <div class="block-27">
                        <ul id="pagination">
                            @if (Model.totalCount > 1)
                            {
                                @if (currentPage > 1)
                                {

                                    <li class=""><a href="?page=@(currentPage - 1)"><i class="fa fa-backward"></i></a></li>
                                }
                                else
                                {
                                    <li class="disabled"><span class=""><i class="fa fa-backward"></i></span></li>
                                }
                                @foreach (var i in pagesToShow.Distinct())
                                {
                                    if (i == null)
                                    {
                                        <li><span>...</span></li>
                                    }
                                    else
                                    {
                                    <li class="@(currentPage == i ? "active" : "")"
                                        id="pageId-@i"><a href="/ServiceProviders?page=@i">@i</a></li>
                                    }
                                }
                                @if (currentPage < totalPages)
                                {
                                    <li class=""><a href="?page=@(currentPage + 1)"><i class="fa fa-forward"></i></a></li>
                                }
                                else
                                {
                                    <li class="disabled"><span class=""><i class="fa fa-forward"></i></span></li>
                                }
                            }

                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.getElementById("applyFilters").addEventListener("click", function (e) {
        e.preventDefault();

        // Get current URL and query string
        const url = new URL(window.location.href);
        const params = new URLSearchParams(url.search);

        // Get selected values
        const category = document.querySelector('[name="searchModel.category"]').value;
        const city = document.querySelector('[name="searchModel.city"]').value;
        const gender = document.querySelector('[name="searchModel.gender"]')?.value;
        const price = document.getElementById("priceFilter").value;

        // Update or add new parameters
        if (category) params.set("category", category); else params.delete("category");
        if (city) params.set("city", city); else params.delete("city");
        if (gender) params.set("gender", gender); else params.delete("gender");
        if (price) params.set("price", price); else params.delete("price");

        // Keep page param if exists, otherwise don't set it
        // (or reset it to 1 if needed: params.set("page", 1);)

        // Redirect to same path with new params
        window.location.href = `${url.pathname}?${params.toString()}`;
    });
    document.getElementById("sortResults").addEventListener("change", function () {
        const selectedSort = this.value;
        const basePath = window.location.pathname;             // e.g., "/search"
        const params = new URLSearchParams(window.location.search);

        if (selectedSort) {
            params.set("sort", selectedSort);                     // set or replace sort key :contentReference[oaicite:1]{index=1}
        } else {
            params.delete("sort");                                // remove if empty
        }

        // Optionally reset page to 1 on sort change:
        // params.set("page", 1);

        const newQuery = params.toString();
        window.location.href = newQuery ? `${basePath}?${newQuery}` : basePath;
    });
</script>