@using Microsoft.AspNetCore.Builder
@using Microsoft.AspNetCore.Localization
@using Microsoft.Extensions.Options
@inject IOptions<RequestLocalizationOptions> LocOptions;
@using TripBusiness.Ibusiness;
@inject IConfiguration _config;
@inject ILocalizationService _localizationService;
@{
    string returnUrl = ViewContext.HttpContext.Request.Path;
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
    var cultureItems = LocOptions.Value.SupportedUICultures
        .Select(c => new SelectListItem { Value = c.Name, Text = c.TwoLetterISOLanguageName })
        .ToList();
    var lang = requestCulture?.RequestCulture.UICulture.Name;
    var facebookSection = ViewContext.HttpContext.Session.GetString("facebook");
    var instgramSection = ViewContext.HttpContext.Session.GetString("instgram");
    var youtubeSection = ViewContext.HttpContext.Session.GetString("youtube");
    var twitterSection = ViewContext.HttpContext.Session.GetString("twitter");
    var address = ViewContext.HttpContext.Session.GetString("address");
    var whatsappSection = ViewContext.HttpContext.Session.GetString("whatsapp");
    var mailSection = ViewContext.HttpContext.Session.GetString("email");
    var whatsapp = whatsappSection?.Replace("\"", "");
    var mail = mailSection?.Replace("\"", "");
    var facebook = facebookSection?.Replace("\"", "");
    var instgram = instgramSection?.Replace("\"", "");
    var youtube = youtubeSection?.Replace("\"", "");
    var twitter = twitterSection?.Replace("\"", "");
    var languages = ViewBag.languages;
    var showLanguageButton = _config.GetSection("ShowLanguageButton").Value;

}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="We offer professional digital marketing services to help businesses grow online. Contact Example Company today!">
    <title>Tour Website with Navbar, Overlay, and Caption</title>
    <!-- Bootstrap CSS -->
    <!-- Include Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <!-- Include Owl Carousel CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.theme.default.min.css">
    <!-- Font Awesome CDN for icons -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display&family=Roboto&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Roboto:wght@400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/styles.css">

    @if (lang.Contains("ar"))
    {
        <link rel="stylesheet" href="~/css/styles-ar.css" data-n-g="">
    }
</head>
<body>

    <!-- Loader with Software Demo Text -->
    <div id="loader">
        <div class="loader-text">
            <span>S</span>
            <span>o</span>
            <span>f</span>
            <span>t</span>
            <span>w</span>
            <span>a</span>
            <span>r</span>
            <span>e</span>
            <span>&nbsp;</span> <!-- Space between Software and Demo -->
            <span>D</span>
            <span>e</span>
            <span>m</span>
            <span>o</span>
        </div>
    </div> 
    <!-- Loader End -->
 
    <!-- Start Navbar-->
    <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#">Tour Website</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/about-us">About</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/contact-us">Contact</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Services
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="#">Service 1</a>
                            <a class="dropdown-item" href="#">Service 2</a>
                            <a class="dropdown-item" href="#">Service 3</a>
                        </div>
                    </li>
                   
                    @if (showLanguageButton == "1")
                    {
                        <li class="nav-item dropdown">
                            @if (languages != null)
                            {
                                foreach (var c in languages)
                                {
                                    if (c.code == lang)
                                    {
                                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <img style="display: inline; width: 20px; height: 20px; border-radius: 50%;" src="~/images/@c.code-lang.png" loading="lazy" />
                                            @requestCulture.RequestCulture.UICulture.Name
                                        </a>
                                    }
                                }
                            }
                            <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                                @if (languages != null)
                                {
                                    foreach (var c in languages)
                                    {
                                        <span dropdown-item" onclick="ChangeLanguage('@c.code','@returnUrl')">
                                            <img style="display: inline; width: 20px; height: 20px; border-radius: 50%;" src="~/images/@c.code-lang.png" loading="lazy" />
                                            <span class="active">@c.code</span>
                                        </span>
                                    }
                                }
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->
    <!-- Start header Carousel -->
    <header>
        <div id="carouselExampleFade" class="carousel slide carousel-fade" data-bs-ride="carousel">
            <div class="carousel-inner">
                <!-- First Item with Caption and Overlay -->
                <div class="carousel-item active">
                    <img src="images/header-lap-carousel.webp" class="d-block w-100" alt="..." loading="lazy" />
                    <div class="overlay"></div>
                    <div class="carousel-caption">
                        <h5>First Slide Caption</h5>
                        <p>Some description or additional text for the first slide.</p>
                    </div>
                </div>
                <!-- Second Item with Caption and Overlay -->
                <div class="carousel-item">
                    <img src="images/header-office-carousel.webp" class="d-block w-100" alt="..." loading="lazy" />
                    <div class="overlay"></div>
                    <div class="carousel-caption">
                        <h5>Third Slide Caption</h5>
                        <p>Some description or additional text for the third slide.</p>
                    </div>
                </div>
                <!-- third Item with Caption and Overlay -->
                <div class="carousel-item">
                    <img src="images/header-person-carousel.webp" class="d-block w-100" alt="..." loading="lazy" />
                    <div class="overlay"></div>
                    <div class="carousel-caption">
                        <h5>Third Slide Caption</h5>
                        <p>Some description or additional text for the third slide.</p>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <!-- End Header Carousel -->
    <main>
            @RenderBody()
    </main>

    <footer class="footer">
        <div class="footer-content container">
            <!-- Services Section -->
            <div class="footer-section">
                <h4>Our Expertise</h4>
                <ul class="services-list">
                    <li><i class="fas fa-check-circle"></i> Web Development</li>
                    <li><i class="fas fa-check-circle"></i> Mobile App Development</li>
                    <li><i class="fas fa-check-circle"></i> Cloud Solutions</li>
                    <li><i class="fas fa-check-circle"></i> UI/UX Design</li>
                </ul>
            </div>

            <!-- Menu Links Section -->
            <div class="footer-section">
                <h4>Quick Links</h4>
                <ul class="footer-menu">
                    <li><a href="/">Home</a></li>
                    <li><a href="/about-us">About Us</a></li>
                    <li><a href="/terms">terms</a></li>
                    <li><a href="/contact-us">Contact</a></li>
                </ul>
            </div>

            <!-- Contact Info with Icons -->
            <div class="footer-section">
                <h4>Contact Info</h4>
                <ul class="contact-info">
                    <li><i class="fas fa-map-marker-alt"></i> 1234 Software Avenue, Suite 100</li>
                    <li><i class="fas fa-phone-alt"></i> (123) 456-7890</li>
                    <li><i class="fas fa-envelope"></i> info@softwarehouse.com</li>
                </ul>
            </div>

            <!-- Social Media Links -->
            <div class="footer-section">
                <h4>Follow Us</h4>
                <ul class="social-media">
                    <li><a href="https://facebook.com" target="_blank"><i class="fab fa-facebook-f"></i></a></li>
                    <li><a href="https://twitter.com" target="_blank"><i class="fab fa-twitter"></i></a></li>
                    <li><a href="https://linkedin.com" target="_blank"><i class="fab fa-linkedin-in"></i></a></li>
                    <li><a href="https://instagram.com" target="_blank"><i class="fab fa-instagram"></i></a></li>
                </ul>
            </div>
        </div>

        <!-- Footer Bottom (Copyright) -->
        <div class="footer-bottom">
            <p>&copy; 2025 Software House. All Rights Reserved.</p>
        </div>
    </footer>
    <!-- Include jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Include Owl Carousel JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
    <!-- Include Bootstrap JS (optional for components like Modal or Dropdown) -->
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <!-- Bootstrap JS -->
    <script src="~/js/popper.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>

    <!-- Custom Script -->
    <script src="~/js/scripts.js"></script>

    <script>
        function ChangeLanguage(lang, url) {
            $.ajax({
                url: "/Home/ChangeLanguage",
                type: "POST",
                data: {
                    culture: lang,       // First parameter
                    returnUrl: url        // Second parameter
                },
                success: function (data) {
                    location.reload();
                },
                error: function (error) {
                    console.log("e");
                }
            });
        }
    </script>
</body>
</html>
