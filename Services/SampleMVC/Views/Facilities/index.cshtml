@using TripBusiness.Ibusiness
@model List<MWS.Data.Entities.TourAttachment>;
@inject ILocalizationService _localizationService;
@{
    ViewBag.Title = "Admin Page";
    Layout = "~/Views/Shared/_layout.cshtml";
    var facilitiess = ViewBag.facilitiess;
}
<!--Start image section-->
<div  class="parallax-content-1 opacity-mask" data-opacity-mask="rgba(0, 0, 0, 0.6)" style="background-color: rgba(0, 0, 0, 0.6);">
    <div class="animated fadeInDown">
        <img alt="facilities" src="~/images/16599949550wiki1.jpg" style="width:100%;background-repeat:no-repeat;background-size:cover;height:65vh;"/>
        <div class="overlaySlider"></div>
    </div>
</div>
<div class="container">
    <div class="fqaTitle" style="margin:30px 0px;">
        <p style="font-size:25px;font-weight:bold;"> @_localizationService.Localize("OurFacilities")</p>
    </div>
    <div class="row">
    @foreach (var facilities in facilitiess)
    {
        <div class="col-md-4">
            <div class="single-facility animate-box fadeInUp animated" data-animate-effect="fadeInUp"
                     style="background: #faf8f5; padding: 30px 20px;min-height:250px; transition: .5s; position: relative; z-index: 1; margin-bottom: 30px; line-height: 1; border: 1px solid #f1eeeb;">
                    @if (Model.Where(e => e.tourId == facilities.facilitiesId).ToList().Count > 0)
                    {
                        var mainImage = Model.Where(e => e.tourId == facilities.facilitiesId && e.type == "facilities").ToList();
                        <img style="width: 45px;margin-bottom: 20px;" src="~/Files/@mainImage[0].attachmentPath" alt="tour">
                    }
                    <h5 style="font-family: 'Gilda Display', serif !important; font-size: 21px; color: #222; margin-bottom: 10px;">@facilities.title</h5>
                    <p style="line-height: 1.75em;">@facilities.description</p>
                <div class="facility-shape"> </div>
            </div>
        </div>
    }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(".question div").on("click", function () {
            $(this).find("i").toggleClass("fa-plus fa-minus");
        });
    });
    function viewcontact(id,name) {
        $(".modal-body #contactId").val(id);
        $(".modal-body #contactName").val(name);
        }
</script>