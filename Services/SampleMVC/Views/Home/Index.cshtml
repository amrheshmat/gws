<script type="text/javascript">
    $(document).ready(function () {
        if (localStorage.getItem("spcialRequestTitle")) {
            $.toast({
                heading: localStorage.getItem("spcialRequestTitle"),
                text: localStorage.getItem("spcialRequestMessage"),
                showHideTransition: 'slide',
                position: 'top-right',
                icon: 'success',
                bgColor: '#1e7506',
                hideAfter: 5000
            });
            localStorage.clear();
        }
        if (localStorage.getItem("contactTitle")) {
            $.toast({
                heading: localStorage.getItem("contactTitle"),
                text: localStorage.getItem("contactMessage"),
                showHideTransition: 'slide',
                position: 'top-right',
                icon: 'success',
                bgColor: '#1e7506',
                hideAfter: 5000
            });
            localStorage.clear();
        }
    });
</script>