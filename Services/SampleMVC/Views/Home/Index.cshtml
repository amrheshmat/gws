@* Who we are *@
<section class="relative md:py-24 py-16 overflow-hidden">
    <div class="container relative">
        <div class="grid md:grid-cols-12 grid-cols-1 items-center gap-6 relative">
            <div class="md:col-span-5">
                <div class="relative">
                    <video style="width:100%" poster="" controls>
                        <source src="/images/video.mp4" type="video/mp4">
                        Your browser does not support HTML video.
                    </video>
                </div>
            </div>
            <div class="md:col-span-7">
                <div class="lg:ms-8">
                    <h3 class="mb-6 md:text-3xl text-2xl md:leading-normal leading-normal font-semibold">@_localizationService.Localize("WhoWeAre")</h3>
                    <p class="text-slate-400 max-w-xl mb-6">
                        @_localizationService.Localize("WhoWeAreDesc")
                    </p>
                    <a href="/aboutUs" class="py-2 px-5 inline-block tracking-wide align-middle duration-500 text-base text-center bg-red-500 text-white rounded-md">Read More <i class="mdi mdi-chevron-right align-middle ms-0.5"></i></a>
                </div>
            </div>

        </div>
    </div><!--end container-->

    <div class="container relative md:mt-24 mt-16" id="tourPackages" style="margin-top:90px !important;">
        <div class="grid grid-cols-1 text-center">
            <h3 class="mb-6 md:text-3xl text-2xl md:leading-normal leading-normal font-semibold" style="margin-bottom:35px!important;">@_localizationService.Localize("ToursPackages")</h3>
        </div><!--end grid-->
        <div class="tab-content" id="pills-tabContent">
            <div class="tab-pane fade active show" id="pills-london" role="tabpanel" aria-labelledby="pills-london-tab">
                <div class="row g-4">
                     @if (tours != null)
                    {
                        var i = 0;
                        foreach (var tour in tours)
                        {

                            <div class="col-xs-12 col-lg-4 col-sm-6">
                                    <div class="package-card h-calc">
                                        <div class="package-img imgEffect4">
                                            <a href="/tourDetails/@tour.tourId">
                                                @if (Model.Where(e => e.tourId == tour.tourId).ToList().Count > 0)
                                                {
                                                    var mainImage = Model.Where(e => e.tourId == tour.tourId).ToList();
                                                    <img src="~/Files/@mainImage[0].attachmentPath" alt="tour" >
                                                }
                                                else
                                                {
                                                    <img src="~/images/listing/1.jpg" alt="tour" >
                                                }
                                            </a>
                                            <div class="image-badge">
                                                <p class="pera"><a href="/tourDetails/@tour.tourId" id="bookNow">Book Now</a></p>
                                            </div>
                                        </div>
                                        <div class="package-content">
                                            <p class="area-name">
                                                <a href="tour-details.html">@tour.title</a>
                                            </p>
                                            <div class="location">
                                                <i class="ri-map-pin-line"></i>
                                            <div class="name">@tour.tourLocation</div>
                                            </div>
                                            <div class="packages-person">
                                                <div class="count">
                                                    <i class="fa fa-clock"></i>
                                                <p class="pera">@tour.duration Days</p>
                                                </div>
                                                <div class="count">
                                                    <i class="fa fa-home"></i>
                                                <p class="pera">@tour.capacity Rooms</p>
                                                </div>
                                            </div>
                                            <div class="price-review">
                                                <div class="d-flex gap-10">
                                                    <p class="light-pera">From</p>
                                                <p class="pera">@tour.adultPrice</p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                        }
                    } 
                </div>
            </div>
        </div>
        <!--end grid-->
    </div><!--end container-->
    <div class="container">
    <div class="row">
        <div class="col-xs-12">
                <p style="font-weight: bold;font-size: 25px;color: #ef4f4f;margin-top: 30px;margin-bottom: 10px;">
                    @_localizationService.Localize("WhyBookingWithUs")
                </p>
            <ul id="whyBookingUs">
                    @foreach(var c in whyChooseUs)
                    {
                        <li><i class="fa fa-angle-double-right"></i>@c.title</li>
                    }
            </ul>
        </div>
    </div>
    </div>
</section>
