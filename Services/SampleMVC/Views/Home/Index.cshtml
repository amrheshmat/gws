        });
        $("#seeMore").on("click", function (e) {
            e.preventDefault();
            $('html, body').animate({
                scrollTop: $("#tourPackages").offset().top - 70
            }, 2000);
        });
        if (localStorage.getItem("spcialRequestTitle")) {
            $.toast({
                heading: localStorage.getItem("spcialRequestTitle"),
                text: localStorage.getItem("spcialRequestMessage"),
                showHideTransition: 'slide',
                position: 'top-right',
                icon: 'success',
                bgColor: '#1e7506',
                hideAfter: 5000
            });
